@{
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MVCCrudAjax</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link href="~/css/style.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/Employee.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/crypto-js/4.1.1/crypto-js.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body>
    
    <div class="container text-center">
        <form class="mx-auto text-center">
            <h4 class="text-center mt-3">Sign In</h4>
            
            <div class="form-group mb-4 mt-5">

                <input type="text" class="form-control-lg" id="EmailID" placeholder="email" required />
                <h6 id="ErrEmailID" style="color:red; display:none"></h6>
                
            </div>
            <div class="form-group mb-4">
                <input type="password" class="form-control-lg" id="Password" placeholder="password" required />
                <h6 id="ErrPassword" style="color:red"></h6>
            </div>
            <div class="text-center mb-4">
                <button type="button" class="btn btn-primary btn-lg text-center" onclick="CheckButton()">SIGN IN</button>
            </div>
            
            <div class=" logintext text-center mb-2 mt-3">
                <div class="form-text">
                    Or login with
                </div>
            </div><br />
            <div class="sociallinks text-center mb-3 mt-1">
                <a href=#>
                    <img style ="border-radius:50%" height="40px" width="40px" src="~/image/facebook-color-svgrepo-com.svg" />
                </a>
                &nbsp;&nbsp;&nbsp;&nbsp;
                <a href=#>
                    <img style ="border-radius:50%" height="40px" width="40px" src="~/image/google-svgrepo-com.svg" />
                </a>
            </div>
            

            <div id="signuptext" class="text-center mt-2">
                <a asp-controller="Home" asp-action="signup">Sign Up</a>
                
            </div>

        </form>
        
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
